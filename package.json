{
  "name": "json-parsefy",
  "version": "1.3.0",
  "description": "Correct any json string that has been through a loop of stringify methods to remove unnecessary escaped strings.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "pnpm run build",
    "pretest": "eslint . --fix && prettier --write ./src/**/*.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix && prettier \"{src,apps,libs,test}/**/*.ts\" --write",
    "prepush": "pnpm run test",
    "precommit": "lint-staged",
    "prepare": "husky",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DMBerlin/json-parsefy.git"
  },
  "keywords": [
    "typescript",
    "json",
    "npm-package"
  ],
  "author": "Daniel Marinho",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DMBerlin/json-parsefy/issues"
  },
  "homepage": "https://github.com/DMBerlin/json-parsefy#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cli": "^19.8.1",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.6",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.2.4",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "class-transformer": "^0.5.1"
  },
  "peerDependenciesMeta": {
    "class-transformer": {
      "optional": true
    }
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__fixtures__/",
      "/__mocks__/",
      "/__tests__/",
      "/interfaces/",
      "/types/",
      "/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapper": {
      "^@types/(.*)$": "<rootDir>/../src/types/$1",
      "^@utils/(.*)$": "<rootDir>/../src/utils/$1",
      "^@decorators/(.*)$": "<rootDir>/../src/decorators/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}